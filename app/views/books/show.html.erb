<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-3">

<h2>User Info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class = "table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>Introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class = "row">
    <div class = "btn btn-outline-secondary btn-block">
      <%= link_to edit_user_path(@user) do %>
    <i class="fas fa-user-cog" style="color: #b0b0b0;"></i>
    <% end %>
    </div>
  </div>



<%= form_with model: @book do |f| %>

<h2 class = "mt-3">New Book</h2>

<div class = "form-group">
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</div>

<div class = "form-group">
  <%= f.label 'Opinion' %><br />
  <%= f.text_area :body %>
</div>

<div class = "form-group">
  <%= f.submit 'Create Book',class:"btn btn-success" %>
</div>

<% end %>
</div>

<div class = "col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class = "table">
  <tbody>
    <tr>
      <td>
      <%= link_to user_path(@book.user.id) do %>
      <%= image_tag @book.user.get_profile_image(100,100) %><br />
      <%= @user.name %>
      <% end %>
      </td>

      <td>
        <%= link_to @book.title,book_path(@book.id) %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <% if @book.user == current_user %>
      <td>
        <button type="button" class="btn btn-success">
          <%= link_to "Edit", edit_book_path(@book.id),class:"text-light" %>
      </button>
    </td>
    <td>
      <button type="button" class="btn btn-danger">
        <%= link_to "Destroy", book_path(@book.id), method: :delete, "date-confirm" => "本当に削除しますか？",class:"text-light" %>
      </button>
    </td>
  <% end %>
  </tr>
  </tbody>
  </table>
  </div>
</div>
</div>
